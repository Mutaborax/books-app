{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "default": {},
    "title": "Root Schema",
    "required": [
        "books"
    ],
    "properties": {
        "books": {
            "type": "array",
            "default": [],
            "title": "The books Schema",
            "items": {
                "type": "object",
                "title": "A Schema",
                "required": [
                    "isbn",
                    "amazon_url",
                    "author",
                    "language",
                    "pages",
                    "publisher",
                    "title",
                    "year"
                ],
                "properties": {
                    "isbn": {
                        "type": "string",
                        "title": "The isbn Schema",
                        "examples": [
                            "sample_isbn_1",
                            "sample_isbn_2"
                        ]
                    },
                    "amazon_url": {
                        "type": "string",
                        "title": "The amazon_url Schema",
                        "examples": [
                            "http://www.amazon.com/sample_url_1",
                            "http://www.amazon.com/sample_url_2"
                        ]
                    },
                    "author": {
                        "type": "string",
                        "title": "The author Schema",
                        "examples": [
                            "Sample Author 1",
                            "Sample Author 2"
                        ]
                    },
                    "language": {
                        "type": "string",
                        "title": "The language Schema",
                        "examples": [
                            "English",
                            "Spanish"
                        ]
                    },
                    "pages": {
                        "type": "integer",
                        "title": "The pages Schema",
                        "examples": [
                            320,
                            280
                        ]
                    },
                    "publisher": {
                        "type": "string",
                        "title": "The publisher Schema",
                        "examples": [
                            "Sample Publisher 1",
                            "Sample Publisher 2"
                        ]
                    },
                    "title": {
                        "type": "string",
                        "title": "The title Schema",
                        "examples": [
                            "Sample Title 1",
                            "Sample Title 2"
                        ]
                    },
                    "year": {
                        "type": "integer",
                        "title": "The year Schema",
                        "examples": [
                            2020,
                            2021
                        ]
                    }
                },
                "examples": [{
                    "isbn": "sample_isbn_1",
                    "amazon_url": "http://www.amazon.com/sample_url_1",
                    "author": "Sample Author 1",
                    "language": "English",
                    "pages": 320,
                    "publisher": "Sample Publisher 1",
                    "title": "Sample Title 1",
                    "year": 2020
                },
                {
                    "isbn": "sample_isbn_2",
                    "amazon_url": "http://www.amazon.com/sample_url_2",
                    "author": "Sample Author 2",
                    "language": "Spanish",
                    "pages": 280,
                    "publisher": "Sample Publisher 2",
                    "title": "Sample Title 2",
                    "year": 2021
                }]
            },
            "examples": [
                [{
                    "isbn": "sample_isbn_1",
                    "amazon_url": "http://www.amazon.com/sample_url_1",
                    "author": "Sample Author 1",
                    "language": "English",
                    "pages": 320,
                    "publisher": "Sample Publisher 1",
                    "title": "Sample Title 1",
                    "year": 2020
                },
                {
                    "isbn": "sample_isbn_2",
                    "amazon_url": "http://www.amazon.com/sample_url_2",
                    "author": "Sample Author 2",
                    "language": "Spanish",
                    "pages": 280,
                    "publisher": "Sample Publisher 2",
                    "title": "Sample Title 2",
                    "year": 2021
                }]
            ]
        }
    },
    "examples": [{
        "books": [{
            "isbn": "sample_isbn_1",
            "amazon_url": "http://www.amazon.com/sample_url_1",
            "author": "Sample Author 1",
            "language": "English",
            "pages": 320,
            "publisher": "Sample Publisher 1",
            "title": "Sample Title 1",
            "year": 2020
        },
        {
            "isbn": "sample_isbn_2",
            "amazon_url": "http://www.amazon.com/sample_url_2",
            "author": "Sample Author 2",
            "language": "Spanish",
            "pages": 280,
            "publisher": "Sample Publisher 2",
            "title": "Sample Title 2",
            "year": 2021
        }]
    }]
}